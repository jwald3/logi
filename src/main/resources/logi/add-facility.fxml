<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootID" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logi.controllers.AddFacilityController">
    <top>
        <fx:include source="navi-menu.fxml" />
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Facility Name">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="25.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="facilityNameTextField" promptText="Enter Facility Name" />
                <Label text="Facility Address">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="facilityAddressTextField" promptText="Enter Facility Address" />
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#submitFacilityForm" text="Add Facility" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                    </VBox.margin>
                </Button>
            <Button mnemonicParsing="false" onAction="#viewFacilities" text="View Facilities" />
            </children>
        </VBox>
    </center>
    <left>
        <Region prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </left>
    <right>
        <Region prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </right>
</BorderPane>
